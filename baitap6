import math
a = float(int(input("Nhập chieu dai a: ")))
b = float(int(input("Nhập chieu dai b: ")))
c = float(int(input("Nhập chieu cao c: ")))
chuvitamgiac = a + b + c
print("Chu vi tam giac la:", chuvitamgiac)
dientich = math.sqrt((chuvitamgiac/2)*((chuvitamgiac/2)-a)*((chuvitamgiac/2)-b)*((chuvitamgiac/2)-c))
print("Dien tich tam giac la:", dientich)